<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jordanmadrigal.lendsum">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity
            android:name=".SplashScreenActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"
            android:theme="@style/AppTheme.Launcher">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".LogInActivity"
            android:screenOrientation="portrait"
            android:label="@string/welcome_msg" />

        <activity
            android:name=".CreateProfileActivity"
            android:screenOrientation="portrait"
            android:label="@string/create_new_profile"
            android:parentActivityName=".HomeActivity" />

        <activity
            android:name=".ForgotPassActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity" />

        <activity
            android:name=".HomeActivity"
            android:screenOrientation="portrait"
            android:label="@string/app_name" />

        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"
            android:label="Settings"/>

        <activity
            android:name=".ProfileActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"
            android:label="Profile"/>

        <activity
            android:name=".FriendSearchActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"
            android:label="Search Friends"/>

        <activity
            android:name=".ManagePaymentActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"
            android:label="Manage Payments"/>

        <activity
            android:name=".InviteFriends"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"
            android:label="Invite Friends"/>

        <activity
            android:name=".HelpActivity"
            android:screenOrientation="portrait"
            android:parentActivityName=".HomeActivity"
            android:label="Help"/>
    </application>

</manifest>